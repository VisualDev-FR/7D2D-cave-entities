<config>

    <!-- zombieTemplateMale -->
    <remove xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='AITask']" />
    <remove xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='AITarget']" />
    <append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']">

        <property name="AITask-1" value="BreakBlock" />
        <property name="AITask-2" value="DestroyArea" />
        <property name="AITask-3" value="Territorial" />
        <property name="AITask-4" value="ApproachDistraction" />
        <property name="AITask-5" value="EatBlock, cave-entities" data="placeholder=zombieFoodPlaceholder" /> <!-- eat action here -->
        <property name="AITask-6" value="ApproachAndAttackTarget" data="class=EntityPlayer,0,EntityBandit,0,EntityEnemyAnimal,0,EntityAnimal" />
        <property name="AITask-7" value="ApproachSpot" />
        <property name="AITask-8" value="Look" />
        <property name="AITask-9" value="Wander" />
        <property name="AITask-10" value="" />

        <property name="AITarget-1" value="SetAsTargetIfHurt" data="class=EntityPlayer,EntityBandit,EntityEnemyAnimal" />
